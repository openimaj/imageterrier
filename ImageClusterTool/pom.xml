<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>imageterrier-master</artifactId>
		<groupId>org.imageterrier</groupId>
		<version>3.5-SNAPSHOT</version>
		<relativePath>..</relativePath>
	</parent>
	<groupId>org.imageterrier</groupId>
	<artifactId>ImageClusterTool</artifactId>
	<version>3.5-SNAPSHOT</version>
	<name>ImageClusterTool</name>
	<url>http://www.imageterrier.org/ImageClusterTool</url>
	<inceptionYear>2011</inceptionYear>
	<description>
		Command-line tools for constructing clustered sets of images
		using an image terrier index
    </description>
	<licenses>
